extends layout

block content
  h1 #{title} : #{book.title}

  if book_instances.length > 0
    div(style='margin-top:20px;margin-left:20px')
      p #[strong Sorry but this book have dependent book instances, please delete them before.]

      each instance in book_instances
        dt
          dd
            hr
            a(href=instance.url) #{instance._id}
          dl
  else
    p Do you want to delete this book?
    div.form-group
      form(method='POST' action='')
        input#book.form-content(type='hidden' name='bookid' value=book._id)
        button.btn.btn-primary(type='submit') Delete
